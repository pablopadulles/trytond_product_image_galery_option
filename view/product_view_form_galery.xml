<?xml version="1.0"?>
<data>
    <xpath expr="/form/notebook/page[@id='general']"
        position="after">
        <page id="images" string="Galeria de Imagenes" col="1">
            <field name="images" colspan="1"/>
        </page>
    </xpath>
    <xpath expr="/form/field[@name='active']"
        position="after">
        <label name="url"/>
        <field name="url"/>
        <label name="precio_lista"/>
        <field name="precio_lista"/>
    </xpath>
    <xpath expr="//field[@name='description']" position="replace_attributes">
        <field name="description" widget="richtext" toolbar="1"/>
    </xpath>
</data>
